<div class="d-flex justify-content-center mt-3 mb-5">
  <div class="feed-column">
    <% recommendations.each do |recommendation| %>
      <%= render "recommendations/recommendation_card", recommendation: recommendation %>
    <% end %>

    <% if recommendations.empty? %>
      <p class="text-center text-muted">No recommendations yet.</p>
    <% end %>
  </div>
</div>

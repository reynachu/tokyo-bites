<h1>Pages#home</h1>
<div class="container mt-3 mb-5">
  <% @recommendations.each do |rec| %>
    <div class="card mb-3 shadow-sm">
      <div class="card-body">
        <!-- Post header -->
        <div class="d-flex align-items-center mb-2">
          <%# Placeholder avatar (no rec.user) %>
          <%= image_tag "https://i.pravatar.cc/100", class: "rounded-circle me-2", size: "40x40" %>
          <div>
            <%# Placeholder username %>
            <strong><%= link_to("username_placeholder", profile_path, class: "text-decoration-none text-dark") %></strong><br>
            <%# Placeholder time %>
            <small class="text-muted">5 minutes ago</small>
          </div>
        </div>

        <!-- Post body -->
        <%# Placeholder restaurant name %>
        <h5 class="card-title mb-1">Restaurant Placeholder</h5>
        <%# Placeholder comment %>
        <p class="card-text">This is a sample recommendation comment.</p>
        <%# Placeholder rating %>
        <span class="badge bg-warning text-dark">‚≠ê 4/5</span>
      </div>
    </div>
  <% end %>

  <% if @recommendations.empty? %>
    <p class="text-center text-muted">No recommendations yet.</p>
  <% end %>
</div>

<%= render "shared/bottom_nav" %>

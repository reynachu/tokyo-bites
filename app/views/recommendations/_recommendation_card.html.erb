<% compact = local_assigns.fetch(:compact, false) %>

<div id="<%= dom_id(recommendation) %>"
     class="recommendation-card card mb-4 shadow-sm border-0 rounded-4 position-relative"
     data-controller="like"
     data-like-recommendation-id-value="<%= recommendation.id %>">
  <div class="card-body p-3 p-md-4">
  <!-- Header (responsive sentence style) -->
  <div class="mb-2">
    <!-- Row 1: avatar + username + recommends + time -->
    <div class="d-flex align-items-center">
      <!-- Avatar -->
      <%= link_to user_path(recommendation.user), class: "me-2 d-inline-block flex-shrink-0" do %>
        <% if recommendation.user.profile_picture.attached? %>
          <%= image_tag recommendation.user.profile_picture,
                        class: "rounded-circle d-block",
                        size: "40x40",
                        alt: "#{recommendation.user.username}'s avatar" %>
          <% else %>
            <%= image_tag "https://i.pravatar.cc/100?u=#{recommendation.user.id}",
                        class: "rounded-circle d-block",
                        size: "40x40",
                        alt: "#{recommendation.user.username}'s avatar" %>
          <% end %>
        <% end %>
        <!-- Meta -->
        <div class="flex-grow-1 d-flex align-items-baseline">
          <strong class="me-1">
            <%= link_to recommendation.user.username,
                      user_path(recommendation.user),
                      class: "link-dark link-underline-opacity-0 link-underline-opacity-100-hover" %>
          </strong>
          <span class="text-muted">recommends</span>
        </div>
        <!-- Time -->
        <small class="text-muted ms-2">
          Â· <%= time_ago_in_words(recommendation.created_at) %> ago
        </small>
      </div>
      <!-- Row 2: Restaurant name -->
      <h5 class="card-title mt-1 mb-0">
        <%= link_to recommendation.restaurant.name,
                  restaurant_path(recommendation.restaurant),
                  class: "fw-semibold fs-5 link-dark link-underline-opacity-0 link-underline-opacity-100-hover" %>
      </h5>
    </div>
    <%# --- DELETE X (owner only) --- %>
    <% if current_user == recommendation.user %>
      <%= link_to "",
            recommendation_path(recommendation),
            data: { turbo_method: :delete, turbo_confirm: "Delete this post?" },
            class: "btn-close position-absolute top-0 end-0 m-2",
            aria: { label: "Delete post" } %>
    <% end %>
    <% if recommendation.photos.attached? %>
      <% carousel_id = "rec-#{recommendation.id}-carousel" %>
      <div id="<%= carousel_id %>" class="carousel slide"
           data-bs-ride="false" data-bs-interval="false"
           data-bs-touch="true" data-bs-keyboard="true">
        <% if recommendation.photos.size > 1 %>
          <div class="carousel-indicators">
            <% recommendation.photos.each_with_index do |_, idx| %>
              <button type="button"
                      data-bs-target="#<%= carousel_id %>"
                      data-bs-slide-to="<%= idx %>"
                      class="<%= 'active' if idx.zero? %>"
                      aria-current="<%= idx.zero? %>"
                      aria-label="Slide <%= idx + 1 %>"></button>
            <% end %>
          </div>
        <% end %>
        <div class="carousel-inner">
          <% recommendation.photos.each_with_index do |photo, idx| %>
            <div class="carousel-item <%= 'active' if idx.zero? %>">
              <div class="ratio ratio-1x1">
                <%= image_tag photo, class: "w-100 h-100", style: "object-fit: cover;" %>
              </div>
            </div>
          <% end %>
        </div>
        <% if recommendation.photos.size > 1 %>
          <button class="carousel-control-prev" type="button">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        <% end %>
      </div>
    <% end %>
    <!-- Body -->
    <p class="card-text"><%= recommendation.description %></p>
    <% if recommendation.tags.any? %>
      <div class="tags mt-2">
        <% recommendation.tags.each do |tag| %>
          <span class="tag-badge"><%= tag.name %></span>
        <% end %>
      </div>
    <% end %>
    <!-- Actions row -->
    <div class="d-flex align-items-center justify-content-between mt-2">
      <!-- Left: Like button frame -->
      <%= turbo_frame_tag dom_id(recommendation, :likes) do %>
        <%= render "recommendations/like_button", recommendation: recommendation %>
      <% end %>

    <!-- Bookmark toggle button -->
<button popovertarget="mypopover-<%= recommendation.restaurant.id %>"
        class="btn btn-link p-0 m-0 border-0"
        aria-label="Save to Wishlist"
        style="color: inherit; text-decoration: none;">
  <i class="fa-regular fa-bookmark fs-5"></i>
</button>

<!-- Popover content -->
<div id="mypopover-<%= recommendation.restaurant.id %>"
     popover
     class="p-2 rounded shadow bg-white"
     style="min-width: 200px;"
     data-controller="wishlist"
     data-restaurant-id="<%= recommendation.restaurant.id %>">

  <h6 class="fw-semibold mb-2">Select Wishlist</h6>

  <%= render partial: "wishlists/popover_menu", locals: { restaurant: recommendation.restaurant } %>
</div>







    <%# <% else %>
      <%# <%= link_to "Sign in to bookmark", new_user_session_path, class: "small text-decoration-none text-primary" %>
    <%# <% end %>
    </div>
  </div>

<% if @users.any? %>
  <% @users.each do |user| %>
    <li class="d-flex align-items-center p-2">
      <%= link_to user_path(user), data: { turbo_frame: "main_content" }, class: "text-decoration-none text-dark d-flex align-items-center" do %>
        <%= image_tag user.profile_picture, class: "rounded-circle me-2", style: "width:40px;height:40px;object-fit:cover;" %>
        <span><%= user.username %></span>
      <% end %>
    </li>
  <% end %>
<% end %>

<% if @users.any? && @restaurants.any? %>
  <li class="dropdown-separator"></li>
<% end %>

<% if @restaurants.any? %>
  <% @restaurants.each do |restaurant| %>
    <li class="p-2">
      <%= link_to restaurant_path(restaurant), data: { turbo_frame: "main_content" }, class: "text-decoration-none text-dark" do %>
        <span><%= restaurant.name %></span>
      <% end %>
    </li>
  <% end %>
<% end %>

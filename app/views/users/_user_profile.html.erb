<turbo-frame id="main_content">
  <div class="profile-page">
    <div>Profile works for <%= user.username %></div>
    <h2><%= user.username %></h2>
    <% if user.profile_picture.attached? %>
      <%= image_tag user.profile_picture,
            alt: user.username,
            class: "rounded-circle avatar-150" %>
    <% else %>
      <%= image_tag "https://i.pravatar.cc/100?u=#{user.id}",
            alt: user.username,
            class: "rounded-circle avatar-150" %>
    <% end %>
    <h2>Recommendations</h2>
    <% if user.recommendations.any? %>
      <ul>
        <% user.recommendations.each do |recommendation| %>
          <li><%= recommendation.user_id %></li>
          <li><%= recommendation.restaurant_id %></li>
          <li><%= recommendation.description %></li>
        <% end %>
      </ul>
    <% else %>
      <p>No recommendations yet.</p>
    <% end %>

    <%= link_to "Close", root_path, data: { turbo_frame: "_top" }, class: "btn btn-secondary mt-3" %>
  </div>
</turbo-frame>

<turbo-frame id="main_content">
  <h1 class="mb-4">My Wishlists</h1>

  <% all_wishlists = current_user.wishlists.to_a %>
  <% total_cards = 4 %>

  <div class="row g-4">
    <% total_cards.times do |i| %>
      <% wishlist = all_wishlists[i] %>
      <div class="col-md-6 col-lg-3">
        <div class="card h-100 shadow-sm">
          <div class="card-header <%= i == 0 ? 'bg-primary' : 'bg-secondary' %> text-white">
            <h5 class="mb-0">
              <%= wishlist&.name.present? ? wishlist.name : "Wishlist #{i + 1}" %>
            </h5>
          </div>
          <div class="card-body">
            <% if wishlist && wishlist.restaurants.any? %>
              <div class="d-flex flex-column gap-3">
                <% wishlist.restaurants.each do |restaurant| %>
                  <div class="card p-2 shadow-sm">
                    <div class="d-flex justify-content-between align-items-center">
                      <div>
                        <%= link_to restaurant.name, restaurant_path(restaurant), class: "fw-bold text-decoration-none" %>
                        <p class="text-muted mb-0"><%= restaurant.category %></p>
                      </div>
                      <div class="d-flex flex-column gap-1">
                        <%= button_to "Remove",
                              restaurant_bookmarks_path(restaurant),
                              method: :delete,
                              params: { wishlist_id: wishlist.id, redirect: true },
                              class: "btn btn-sm btn-outline-danger",
                              data: { turbo_confirm: "Remove from this wishlist?" } %>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="alert alert-info mb-0">
                <%= wishlist ? "This wishlist is empty." : "No wishlist yet." %>
              </div>
            <% end %>

            <%# Only render form if wishlist exists %>
            <% if wishlist && i > 0 %>
              <div class="mt-3">
                <%= form_with url: restaurant_bookmarks_path, method: :post, local: true do |f| %>
                    <%= f.collection_select :restaurant_id,
                          Restaurant.all,
                          :id,
                          :name,
                          { prompt: "Select a restaurant to add" },
                          class: "form-select form-select-sm" %>
                    <%= f.hidden_field :wishlist_id, value: wishlist.id %>
                    <%= f.submit "Add", class: "btn btn-sm btn-outline-primary" %>
                  </div>
                <% end %>
              </div>
            <% end %>

          </div>
        </div>
      </div>
    <% end %>
  </div>
</turbo-frame>
